<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewActivity">

    <EditText
        android:id="@+id/ETUserNameCNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/user_name"
        android:padding="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ETEmailCNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/email"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ETUserNameCNA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ETPhoneCNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/phone_number"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ETEmailCNA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ETPass1CNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/password"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ETPhoneCNA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ETPass2CNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/re_password"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ETPass1CNA"
        tools:ignore="MissingConstraints" />
    <Spinner
        android:id="@+id/SSecqurityQusCNA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ETPass2CNA"
        android:padding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:id="@+id/ETSecqurityAnsCNA"
        android:hint="@string/answer"
        app:layout_constraintTop_toBottomOf="@+id/SSecqurityQusCNA"/>

    <Button
        android:id="@+id/BtnSubmitCNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/SSecqurityQusCNA"
        tools:ignore="MissingConstraints"
        android:text="@string/submit"
        tools:layout_editor_absoluteX="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>