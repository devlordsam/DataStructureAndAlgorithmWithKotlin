<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/editTextLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/email"
        android:padding="20dp"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/editTextLoginPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/password"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginEmail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewLoginForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/forget_password"
        app:layout_constraintTop_toBottomOf="@id/editTextLoginPass"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintTop_toBottomOf="@id/textViewLoginForgotPass"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textViewLoginNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="New User"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Account"
        app:layout_constraintTop_toBottomOf="@id/textViewLoginNewUser"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>