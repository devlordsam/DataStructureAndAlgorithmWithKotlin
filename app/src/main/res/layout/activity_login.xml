<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/ETEmailLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/email"
        android:padding="20dp"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/ETPassLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/password"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ETEmailLA"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVForgetPassLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/forget_password"
        app:layout_constraintTop_toBottomOf="@id/ETPassLA"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/BtnLoginLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintTop_toBottomOf="@id/TVForgetPassLA"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/TVNewUserLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="New User"
        app:layout_constraintTop_toBottomOf="@id/BtnLoginLA"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/BtnRegAccLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registar Account"
        app:layout_constraintTop_toBottomOf="@id/TVNewUserLA"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>